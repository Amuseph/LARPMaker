<h1>Player List</h1>
<table border = 1>
<tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email Address</th>
    <th>Player Type</th>
    <th>Controls</th>
</tr>
<% @players.all.each do |player| %>
<tr>
    <td>
    <%= player.firstname %></td>
    <td><%= player.lastname %></td>
    <td><%= player.emailaddress %></td>
    <td><%= player.playertype %></td>
    <td><%= link_to 'View', playeradmin_path(player) %> |
        <%= link_to 'Delete', playeradmin_path(player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
    
  <% end %>
  </table>

