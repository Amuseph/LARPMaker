<%= link_to image_tag("logo_small.png", id: "navbar-logo", :size => '40x40'), root_path, :class => "navbar-brand" %>
<div class="container-fluid">
  <div class="navbar-collapse">
    
    <div class="navbar-nav">
      <%= link_to 'My Characters', player_characters_path, :class => "nav-link" %>

      <%= link_to 'Disabled Link', player_characters_path, :class => "nav-link disabled" %>
    </div>
  

    <div class="navbar-nav ml-auto">
      <% if current_user  %>
        <% if current_user.usertype == 'Admin' %>
          <div class='nav-item dropdown'>
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Admin</a>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to 'Users', admin_users_path, :class => 'dropdown-item' %>
              <%= link_to 'Events', admin_events_path, :class => 'dropdown-item' %>
              <%= link_to 'Game Data', admin_datatables_path, :class => 'dropdown-item' %>
              <%= link_to 'Game Settings', admin_settings_path, :class => 'dropdown-item' %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if user_signed_in? %>
        <div class='nav-item dropdown'>
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Profile</a>
          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to 'Change Character', changecharacter_index_path, remote: true, :class => 'dropdown-item' %>
            <%= link_to 'EXP Log', edit_user_registration_path, :class => 'dropdown-item' %>
            <%= link_to 'Events', edit_user_registration_path, :class => 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'dropdown-item' %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'dropdown-item' %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, :class => "nav-link" %>
      <% end %>

    </div>

  </div>
</div>



