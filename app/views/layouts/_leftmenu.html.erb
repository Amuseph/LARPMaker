<div class="position-sticky pt-2">
  <% @character = Character.find_by(id: session[:character], user_id: current_user) %>

  <div class='sideLink'>
    <%= link_to character_index_path do %>
      <div>
        <%= image_tag("leftmenu/profile.png") %>
        <span id='name'><%= @character.name.partition(" ").first %></span>
      </div>
    <% end %>
  </div>

  <% if canEdit(@character) %>
    <div class='sideSubLink'>
      <%= link_to link_to 'Edit Character', edit_character_path(session[:character]) %>
    </div>
  <% end %>

  <% if canLevel(@character) %>
    <div class='sideSubLink'>
      <%= link_to link_to 'Level Up', player_character_levelup_path(character_id: @character.id), data: { confirm: 'Leveling up will cost ' + @exptolevel.to_s + ' exp. This is irreversible. Are you sure?'}, method: :post, remote: true %>
    </div>
  <% end %>

  <% if canEdit(@character) %>
    <div class='sideSubLink'>
      <%= link_to link_to 'Train Skills', player_character_levelup_path(character_id: @character.id), data: { confirm: 'Leveling up will cost ' + @exptolevel.to_s + ' exp. This is irreversible. Are you sure?'}, method: :post, remote: true %>
    </div>
  <% end %>







  <div class='sideLink'>
    <%= link_to player_character_path(@character) do %>
      <div>
        <%= image_tag("leftmenu/journal.png") %>
        Journal
      </div>
    <% end %>
  </div>
  <div class='sideLink'>
    <%= link_to player_character_path(@character) do %>
      <div>
        <%= image_tag("leftmenu/bank.png") %>
        Bank
      </div>
    <% end %>
  </div>
  <div class='sideLink'>
    <%= link_to character_events_path do %>
      <div>
        <%= image_tag("leftmenu/events.png") %>
        Events
      </div>
    <% end %>
  </div>
  <div class='sideLink'>
    <%= link_to player_character_path(@character) do %>
      <div>
        <%= image_tag("leftmenu/courier.png") %>
        Courier
      </div>
    <% end %>
  </div>
  <div class='sideLink'>
    <%= link_to player_character_path(@character) do %>
      <div>
        <%= image_tag("leftmenu/house.png") %>
        House
      </div>
    <% end %>
  </div>
  <div class='sideLink'>
    <%= link_to player_character_path(@character) do %>
      <div>
        <%= image_tag("leftmenu/guild.png") %>
        Guild
      </div>
    <% end %>
  </div>
    
</div>