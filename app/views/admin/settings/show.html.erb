<%= bootstrap_form_for(Setting.new, url: admin_settings_path) do |f| %>

  <div class="form-group form-checkbox">
    <label>
      <%= f.check_box :sheets_locked, checked: Setting.sheets_locked?, label: 'Lock Character Sheets' %>
    </label>
  </div>

  <div>
    <%= f.submit 'Update Settings' %>
  </div>
<% end %>