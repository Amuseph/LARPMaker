
<% classoptions = options_from_collection_for_select(@classes, 'id', 'name', :selected => @character.characterclass_id) %>
<% deityoptions = options_from_collection_for_select(@deities, 'id', 'name', :selected => @character.deity_id) %>
<% raceoptions = options_from_collection_for_select(@races, 'id', 'name', :selected => @character.race_id) %>

<%= bootstrap_form_with(model: @character, url: yield(:url), local: true) do |f| %>

<% if @character.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:
  </h2>
    <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
</div>
<% end %>
  <%= f.text_field :name %>
  <%= f.select :pronouns, [ 'He/Him', 'She/Her','They/Them' ] %>
  <%= f.select :race_id,  raceoptions %>
  <%= f.select :characterclass_id,  classoptions %>
  <%= f.select :deity_id,  deityoptions, :include_blank => true  %>
  <%= f.submit 'Save Character' %>
  <%= link_to 'Cancel', yield(:backurl) %>
</p>
<% end %>