<%= link_to 'Edit This Character', edit_admin_user_character_path(@character)%> <br>
<hr>

User: <%= link_to @user.firstname + ' ' + @user.lastname, admin_user_path(@user)%><br>
Name: <%= @character.name %><br>
Level: <%= @character.level %><br>
Experience: XP GO HERE<br>
Pronouns: <%= @character.pronouns %><br>
Race: <%= @character.race.name %><br>
Class: <%= @character.characterclass.name %><br>
Deity: <%= if(@character.deity) then @character.deity.name end%><br>
House: <%= if(@character.house_id) then @character.house.name end%><br>
Guild: <%= if(@character.guild_id) then @character.guild.name end %><br>
<hr>
<ul class="nav nav-tabs" id="charTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="skill-tab" data-toggle="tab" href="#skill" role="tab" aria-controls="skill" aria-selected="false">Skills</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="explog-tab" data-toggle="tab" href="#explog" role="tab" aria-controls="class" aria-selected="true">Exp Log</a>
  </li>
</ul>

<div class="tab-content" id="charTabContent">
  <div class="tab-pane fade show active" id="skill" role="tabpanel" aria-labelledby="skill-tab">
    <%= render partial: 'admin/characters/tabs/skills' %>
  </div>
  <div class="tab-pane fade" id="explog" role="tabpanel" aria-labelledby="explog-tab">
  <%= link_to "Add Exp", "#expModal", "data-toggle" => "modal" %>
    <%= render partial: 'admin/characters/tabs/explog' %>
  </div>
</div>