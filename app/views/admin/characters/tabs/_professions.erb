<%= link_to 'Add Profession', new_admin_user_character_characterprofession_path(user_id: @character.user_id, character_id: @character.id), remote: true %>
<table border = 1>
<tr>
    <th>Name</th>
    <th>Rank</th>
    <th>Description</th>
    <th></th>
</tr>
<% @character.characterprofessions.each do |characterprofession| %>
    <tr>
      <td><%= characterprofession.profession.name %></td>
      <td><%= characterprofession.profession.rank %></td>
      <td><%= characterprofession.profession.description %></td>
      <td>
        <%=
          if(canRefundProfession(@character, characterprofession))
              link_to player_character_characterprofession_path(character_id: @character.id, id: characterprofession.profession_id), method: :delete, data: { confirm: 'Are you sure?' } do 
                fa_icon "trash" 
            end
          end
        %>
      </td>
    </tr>
  <% end %>
  </table>

  <div class="modal fade" id="characterProfessionModal" tabindex="-1" role="dialog" aria-labelledby="characterProfessionModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="characterProfessionModalLabel">Add Profession</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div> 
      <div class="modal-body" id="professionModalBody">
      </div>
    </div>
  </div>
</div>