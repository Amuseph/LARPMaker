<% if (current_user.charactercount > current_user.characters.count) %>
  <%= link_to 'Add A Character', new_player_character_path  %>
<% end %>
<table border = 1>
<tr>
    <th>Name</th>
    <th>Level</th>
    <th>Class</th>
    <th>Race</th>
    <th>Deity</th>
    <th>Status</th>
</tr>
<% current_user.characters.each do |character| %>
    <tr>
    <td><%= link_to character.name, player_character_path(character) %></td>
      <td><%= character.level %></td>
      <td><%= character.characterclass.name %></td>
      <td><%= character.race.name %></td>
      <td><%= if(character.deity) then character.deity.name end%></td>
      <td><%= character.status %></td>
    </tr>
  <% end %>
  </table>