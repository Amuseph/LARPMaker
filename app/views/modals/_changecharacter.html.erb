<div class="modal fade" id="changeCharacterModal" tabindex="-1" role="dialog" aria-labelledby="changeCharacterModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changeCharacterModalLabel">Change Character</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div> 
      <div class="modal-body">
      
      <%= bootstrap_form_for :changecharacter, url: character_changecharacter_path do |f| %>
        <div class="row">
          <div class="col-12">
            <%= f.collection_select :character_id, current_user.characters, :id, :name, :selected => session[:character], hide_label: true, class: 'm-auto align-self-center' %>
          </div>
        
          <div class="col-4">
            <img id= 'classtoken' height= '100' width= '100'/>
          </div>
          <div class="col-4">
            <center><span id = 'characterlevel' class = 'display-1'>1</span></center>
          </div>
          <div class="col-4">
            <img id= 'deitytoken' height= '100' width= '100'/>
          </div>
        </div>

          <br><br>
          <%= f.submit 'Load Character' %>
          <% end %>

      </div>
    </div>
  </div>
</div>